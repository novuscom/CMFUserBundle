{% extends 'NovuscomCMFBundle:Default:admin.html.twig' %}

{% block body -%}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Группы пользователей</h3>
        </div>
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Название группы</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('admin_group_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td><a href="{{ path('admin_group_edit', { 'id': entity.id }) }}"><b>{{ entity.name }}</b></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="box-footer">
            <a class="btn btn-success" href="{{ path('admin_group_new') }}">
                <i class="glyphicon glyphicon-plus"></i>
                Добавить группу
            </a>
        </div>
    </div>

{% endblock %}
